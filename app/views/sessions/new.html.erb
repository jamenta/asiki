<div class="login">
<%= form_for(:session, url: login_path) do |f| %> 
  <%= f.email_field :email, :placeholder => "Email", :class => "all-form-input" %>
  <%= f.password_field :password, :placeholder => "Password", :class => "all-form-input" %>
  <%= f.submit "Log in", :class => "login-btn"%>
<% end %>
</div>

<p>Don't have an account?
  <a href="/signup">Sign up for one</a>. It's free!</p>