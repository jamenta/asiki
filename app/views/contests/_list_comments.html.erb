<% @comments.each do |com| %>
<% if com.user_id.to_i == current_user.id.to_i %>
 <div class="user-comment-container" id="contest_comment_<%= com.id %>">
<a class="delete-comment" title="Delete comment" data-confirm="Are you sure you want to delete this comment?" data-method="delete" rel="nofollow" href="/contests/<%= com.contest_id %>/comments/<%= com.id %>" data-remote="true">
<i class="fa fa-trash" aria-hidden="true"></i></a>
<% else %>
 <div class="comment-container" id="contest_comment_<%= com.id %>">
<% end %>
  <div class="comment-content">
    <div class="comment-header">
      <div class="comment-image"><%= user_image_by_id(com.user_id, 20) %></div>
      <a class="name" data-turbolinks="false" href="/profile?user=<%= com.user_id %>"><%= com.first_name + " " + com.last_name[0,1].upcase %>.</a>
      <p class="timestamp"><%= time_ago_in_words(com.created_at) %> ago</p>
    </div>
    <div class="comment">
       <p><%= com.comment %></p>
    </div>
  </div>
 </div>
<% end %>